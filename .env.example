# ===========================================
# COMPANION AI FRAMEWORK - ENVIRONMENT TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================================
# SECURITY & AUTHENTICATION (REQUIRED)
# ===========================================
# Generate strong random keys for production
JWT_SECRET=your-super-secure-jwt-secret-key-here
API_KEY=your-super-secure-api-key-here
SECRET_KEY=your-super-secure-flask-secret-key-here

# ===========================================
# LLM PROVIDERS & API KEYS (REQUIRED)
# ===========================================
# Get API keys from respective providers
OPENROUTER_TONGYI_KEY=your-openrouter-tongyi-key-here
OPENROUTER_DEEPSEEK_KEY=your-openrouter-deepseek-key-here
OPENROUTER_GPT_OSS_KEY=your-openrouter-gpt-oss-key-here
OPENROUTER_API_KEY=your-openrouter-main-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
GROQ_API_KEY=your-groq-api-key-here
BYTEZ_API_KEY=your-bytez-api-key-here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=sqlite:///auth.db
# For production: DATABASE_URL=postgresql://username:password@host:port/database

# ===========================================
# SERVER CONFIGURATION
# ===========================================
HOST=0.0.0.0
PORT=5000
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false
CORS_ORIGINS=*

# ===========================================
# DEPLOYMENT URLs (Update with your actual URLs)
# ===========================================
VERCEL_URL=https://your-app.vercel.app
RAILWAY_URL=https://your-app.railway.app
FLY_APP_NAME=your-fly-app-name
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# ===========================================
# OPTIONAL FEATURES
# ===========================================
ENABLE_AUTONOMOUS_MODE=true
ENABLE_VOICE_CHAT=true
ENABLE_FILE_UPLOAD=true
ENABLE_MULTIMODAL=true
CACHE_ENABLED=true
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# MONITORING & LOGGING (OPTIONAL)
# ===========================================
SENTRY_DSN=your-sentry-dsn-here
LOGROCKET_APP_ID=your-logrocket-app-id-here

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
FLASK_ENV=development
FLASK_DEBUG=true
TEST_DATABASE_URL=sqlite:///test.db

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30
MAINTENANCE_MODE=false
